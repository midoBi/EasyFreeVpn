<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlActivated">@color/icons</item>
        <item name="colorControlHighlight">@color/icons</item>
        <item name="android:textColorHint">@color/icons</item>

        <item name="android:windowBackground">@color/icons</item>


        <item name="colorButtonNormal">@color/primary_dark</item>
    </style>

    <style name="Auth" parent="AppTheme">

        <item name="android:windowBackground">@color/primary</item>


    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/icons</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

</resources>
